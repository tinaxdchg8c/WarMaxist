<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uwo.tools.aibum">

    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 往SDCard读取数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".photo.PhotoActivity" />
        <activity android:name=".photo.PhotoAlbumActivity" />
        <activity android:name=".photo.ShowBigPic" />

        <activity android:name=".imagescan.ScanMainActivity" />
        <activity android:name=".imagescan.ShowImageActivity" />

        <activity android:name=".recylcler.HomeActivity" />
        <activity android:name=".recylcler.StaggeredGridLayoutActivity" />

        <activity android:name=".localphoto.AlbumActivity" />

        <activity android:name=".photos.PhotosMainActivity" />
        <activity android:name=".photos.ImageDetailsActivity" />

        <activity android:name=".volley.VolleyActivity" />

        <activity android:name=".cropper.MyCropperActivity" />

        <activity android:name=".getphoto.GetPhotoMainActivity" />
    </application>

</manifest>
