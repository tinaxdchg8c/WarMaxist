<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_1"
    android:orientation="vertical">

    <include layout="@layout/layout_back_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray_1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAlbum"
                style="@style/ButtonStyle"
                android:layout_marginTop="20dp"
                android:text="@string/selectLocalAlbumType" />


            <Button
                android:id="@+id/btnScan"
                style="@style/ButtonStyle"
                android:text="@string/selectSCanType" />

            <Button
                android:id="@+id/btnImageCropper"
                style="@style/ButtonStyle"
                android:text="@string/selectImageCropperType" />

            <Button
                android:id="@+id/btnMap"
                style="@style/ButtonStyle"
                android:text="@string/map" />

            <Button
                android:id="@+id/btnDialog"
                style="@style/ButtonStyle"
                android:text="@string/dialog" />

            <Button
                android:id="@+id/btnDateTime"
                style="@style/ButtonStyle"
                android:text="时间控件" />

            <Button
                android:id="@+id/btnPlayer"
                style="@style/ButtonStyle"
                android:text="@string/selectPlayerType" />

            <Button
                android:id="@+id/btnProgress"
                style="@style/ButtonStyle"
                android:text="@string/selectProgressType" />

            <Button
                android:id="@+id/btnSkin"
                style="@style/ButtonStyle"
                android:text="@string/selectSkinType" />

            <Button
                android:id="@+id/btnGuide"
                style="@style/ButtonStyle"
                android:text="@string/selectGuideType" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
